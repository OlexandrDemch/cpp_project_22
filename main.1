#include <iostream>

void calculateSumAndProduct(const int* arr, int size, int* sumPtr, int* productPtr) {
    int sum = 0;
    int product = 1;

    for (int i = 0; i < size; i++) {
        sum += arr[i];
        product *= arr[i];
    }

    *sumPtr = sum;
    *productPtr = product;
}

int main() {
    int arr[] = { 1, 2, 3, 4, 5 };
    int size = sizeof(arr) / sizeof(arr[0]);

    int sum, product;
    calculateSumAndProduct(arr, size, &sum, &product);

    std::cout << "Sum: " << sum << std::endl;
    std::cout << "Product: " << product << std::endl;

    return 0;
}
